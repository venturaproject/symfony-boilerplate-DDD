{% extends 'base.html.twig' %}

{% block title %}Weather Informatio{% endblock %}

{% block body %}
<div class="weather-wrapper">

    <h1>Weather Information for {{ weather.city }} 🌦️</h1>
    <ul>
        <li>Minimum Temperature: {{ weather.temp_min }}°C</li>
        <li>Maximum Temperature: {{ weather.temp_max }}°C</li>
        <li>Request Time: {{ weather.request_time }}</li>
    </ul>

</div>
{% endblock %}
